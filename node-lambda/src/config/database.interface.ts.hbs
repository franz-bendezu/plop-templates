export interface IDatabaseConfig {
    username: string;
    password: string;
    engine: string;
    host: string;
    port: number;
    dbname: string;
    dbClusterIdentifier?: string;
}

export interface QueryResult<T> {
    rows: T[];
}

export interface IDatabaseManager <C> {
    executeQuery<T extends any, I = any[]>(
        query: string,
        values?: I[],
    ): Promise<QueryResult<T>>;
    executeQuery<T extends any>(
        query: string,
    ): Promise<QueryResult<T>>;
    connection<T>(callback: (client: C) => Promise<T>): Promise<T>;
    transaction<T>(
        callback: (client: C) => Promise<T>,
    ): Promise<T>;
}
